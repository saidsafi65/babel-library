<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Headers للأمان
    <IfModule mod_headers.c>
        <FilesMatch "\.(pdf)$">
            Header always set X-Content-Type-Options "nosniff"
        </FilesMatch>
    </IfModule>

    # منع برامج التحميل فقط
    RewriteCond %{HTTP_USER_AGENT} "IDM|Internet Download Manager|Download Manager|wget|curl|aria2" [NC]
    RewriteRule ^.*\.(pdf)$ - [F,L]

    # توجيه ملفات PDF للمتحكم
    RewriteRule ^storage/book/.*\.pdf$ index.php [L]
    RewriteRule ^assets/book/.*\.pdf$ index.php [L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# منع عرض محتويات المجلدات
Options -Indexes